{
  "name": "test-project-tailwind-v4",
  "version": "1.0.0",
  "description": "Integration test project for eslint-plugin-valid-class-name with Tailwind CSS v4",
  "type": "module",
  "scripts": {
    "lint": "eslint src --ext .tsx,.ts",
    "lint:fix": "eslint src --ext .tsx,.ts --fix",
    "test:valid": "eslint src/components/ValidComponent.tsx",
    "test:invalid": "eslint src/components/InvalidComponent.tsx",
    "test:tailwind-utilities": "eslint src/components/TailwindUtilitiesValid.tsx",
    "test:tailwind-variants": "eslint src/components/TailwindVariantsValid.tsx",
    "test:arbitrary-values": "eslint src/components/ArbitraryValuesValid.tsx",
    "test:arbitrary-variants": "eslint src/components/ArbitraryVariantsValid.tsx",
    "test:comprehensive-invalid": "eslint src/components/ComprehensiveInvalid.tsx",
    "test:edge-cases": "eslint src/components/EdgeCasesValid.tsx",
    "test:custom-classes": "eslint src/components/CustomClassesComponent.tsx",
    "test:tailwind-v4-features": "eslint src/components/TailwindV4Features.tsx",
    "test:all-valid": "eslint src/components/ValidComponent.tsx src/components/CustomClassesComponent.tsx src/components/TailwindUtilitiesValid.tsx src/components/TailwindVariantsValid.tsx src/components/ArbitraryValuesValid.tsx src/components/ArbitraryVariantsValid.tsx src/components/EdgeCasesValid.tsx src/components/TailwindV4Features.tsx",
    "test:all-invalid": "eslint src/components/InvalidComponent.tsx src/components/ComprehensiveInvalid.tsx"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "eslint": "^9.38.0",
    "eslint-plugin-valid-class-name": "file:../..",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1"
  }
}
